<% for(i=0; i < profiles.length; i++) { %>
    <div class="card p-2 m-3" style="max-width: 20rem;">
        <h2><%= profiles[i].name %></h2>
        <p class="lead">
            <%= profiles[i].username %>
        </p>
        <p class="small">
           Joined On: <%= profiles[i].joinedDate %>
        </p>
        <div class="card-footer">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%= profiles[i].username %>">
                About Me
            </button>

            <!-- Modal -->
            <div class="modal fade" id="<%= profiles[i].username %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel"><%= profiles[i].name %></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h4>I'm A <%= profiles[i].role %></h4>
                            <p class="lead">
                                <%= profiles[i].bio %>
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a href="mailto:<%= profiles[i].email %>" class="btn btn-primary">Email Me</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>